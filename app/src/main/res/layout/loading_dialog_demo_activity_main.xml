<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    tools:context="com.sinothk.dialog.demo.loadingDialog.LoadingDemoMainActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="unWordTip"
        android:text="无文字提示" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="wordTip"
        android:text="文字提示" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="unWordTipAndCancel"
        android:text="无文字提示，可点击取消" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="wordTipAndCancel"
        android:text="文字提示，可点击取消" />
</LinearLayout>
